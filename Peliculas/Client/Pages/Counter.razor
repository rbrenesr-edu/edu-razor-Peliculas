@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<h1 style="color:@appState.Color; font-size:@appState.Size">Counter</h1>

<div style="display: flex;">
    <div style="width: 150px">
        <select @bind=@appState.Color class="form-select mt-4">
            <option value="green">Verde</option>
            <option value="red">Rojo</option>
            <option value="blue">Azul</option>
        </select>
    </div>

    <div style="width: 150px">
        <select @bind=@appState.Size class="form-select mt-4">
            <option value="12px">12</option>
            <option value="14px">14</option>
            <option value="16px">16</option>
        </select>
    </div>


</div>



<p role="status">Current count: @currentCount</p>
<p role="status">Singleton count: @servicioSingleton.Valor</p>
<p role="status">Transient count: @servicioTransient.Valor</p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="IncrementCountJavaScript">Click me JS</button>

