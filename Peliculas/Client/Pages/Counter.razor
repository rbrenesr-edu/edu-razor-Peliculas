@page "/counter"
@inject ServicioSingleton servicioSingleton;
@inject ServicioTransient servicioTransient;

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p role="status">Singleton count: @servicioSingleton.Valor</p>
<p role="status">Transient count: @servicioTransient.Valor</p>


<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        servicioSingleton.Valor = currentCount;
        servicioTransient.Valor = currentCount;
    }

}
