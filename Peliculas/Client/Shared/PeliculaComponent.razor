<div class="m-5">
    <p>
        Título: <b>@Pelicula.Titulo</b>
        @if (DateTime.Today.Subtract(Pelicula.FechaLanzamiento).Days <= 14)
        {
            <span style="color:red"> ¡New!</span>
        }
    </p>

    <p>Fecha Lanzamiento: <b>@Pelicula.FechaLanzamiento.ToString("dd MMM yyyy")</b></p>

    @if (MostrarBotones)
    {
        @* <button class="btn btn-outline-dark"
        @onclick="Eliminar">
            Borrar
        </button> *@
        
        @* <button class="btn btn-outline-dark"
        @onclick="EliminarPelicula">
            Borrar
        </button> *@
        
        <button class="btn btn-outline-dark"
        @onclick="@( ()=> EliminarPelicula.InvokeAsync( Pelicula) )">
            Borrar
        </button>
    }


</div>

@code {
    [Parameter]
    [EditorRequired]
    public Pelicula Pelicula { get; set; } = null!;

    [Parameter]
    public bool MostrarBotones { get; set; } = false;

    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; }

